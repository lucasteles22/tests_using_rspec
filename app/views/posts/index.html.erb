<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<%= link_to 'New Post', new_post_path %> | <%= link_to 'Back', root_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Body
      </th>
      <th>
        Approved
      </th>
      <th>
        Author
      </th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.title %>
        </td>
        <td>
          <%= truncate(post.body, length: 65, omission: '...', separator: ' ') %>
        </td>
        <td>
          <%= post.approved %>
        </td>
        <td>
          <%= post.author.full_name %>
        </td>
        <td><%= link_to 'Show', post %> <%= link_to 'Edit', edit_post_path(post) %> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
